# Environment variables template for News App
# Copy this file to .env and fill in your actual values
# .env file should be added to .gitignore for security

# NY Times API Key (required for building)
NYTIMES_API_KEY=your_nytimes_api_key_here

# SonarQube/SonarCloud configuration (optional)
SONAR_TOKEN=your_sonar_token_here
SONAR_ORGANIZATION=your_sonar_organization_here

# Google Play Console (optional, for deployment)
# GOOGLE_PLAY_JSON_KEY_PATH=path/to/your/service-account-key.json

# Keystore information (for release builds)
# KEYSTORE_PATH=path/to/your/keystore.jks
# KEYSTORE_PASSWORD=your_keystore_password
# KEY_ALIAS=your_key_alias
# KEY_PASSWORD=your_key_password
